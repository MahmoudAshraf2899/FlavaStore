@model Car_Store.Models.ViewModels.ModelViewModel

<h4 style="font-weight:bold;">Update model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" style="font-weight:bold;">
            <input hidden asp-for="Model.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Makes" class="control-label"></label>
                <select asp-for="Model.MakeID" asp-items="Model.CSelectListItem(Model.Makes)" class="form-control"></select>
                <label asp-for="Model.Name" class="control-label"></label>
                <input asp-for="Model.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>
