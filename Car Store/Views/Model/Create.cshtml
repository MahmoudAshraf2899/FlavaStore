@model Car_Store.Models.ViewModels.ModelViewModel
@using Car_Store.Extensions

<h4>Add new model</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-weight:bold;">
                <label asp-for="Makes" class="control-label"></label>
                <select asp-for="Model.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control"></select>
                <span asp-validation-for="Model.MakeID" class="text-danger"></span><br />
                <label asp-for="Model.Name" class="control-label"></label>
                <input asp-for="Model.Name" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>
