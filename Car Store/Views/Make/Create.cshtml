@model Car_Store.Models.Make
<h4 style="font-family: 'Open Sans', sans-serif;">Add new make</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="font-family: 'Open Sans', sans-serif; font-weight:bold;">
                <label asp-for="Name" class="control-label" ></label>
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="font-family: 'Open Sans', sans-serif;" />
                <a asp-action="Index" class="btn btn-warning" style="font-family: 'Open Sans', sans-serif;">Back to List</a>
            </div>
        </form>
    </div>
</div>
