@model Car_Store.Models.ViewModels.BikeViewModel
@using Car_Store.Extensions
<div style="margin-top:20px;">

    <h4 style="font-family: 'Open Sans', sans-serif;">Edit Vechile</h4>
    <hr />
    <form method="post" enctype="multipart/form-data" asp-action="Edit">
        <input hidden asp-for="Bike.Id" />
        <input hidden asp-for="Bike.ImagePath" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Makes" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>
            <div class="col-4">
                <select asp-for="Bike.MakeID" asp-items="Model.Makes.ToSelectListItem()" class="form-control" id="Make" style="font-family: 'Open Sans', sans-serif;"></select>
                <span asp-validation-for="Bike.MakeID" class="text-danger"></span>
            </div>
        </div>

        <!--Image Label-->
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.ImagePath" class="control-label" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>
            <div class="col-4">
                <input type="file" asp-for="Bike.File" class="form-control" />
                <span asp-validation-for="Bike.ImagePath" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Models" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <select asp-for="Bike.ModelID" asp-items="Model.Models.ToSelectListItem()" class="form-control" id="Model" style="font-family: 'Open Sans', sans-serif;"></select>
                <span asp-validation-for="Bike.ModelID" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Year" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <Input asp-for="Bike.Year" class="form-control" style="font-family: 'Open Sans', sans-serif;" />
                <span asp-validation-for="Bike.Year" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Mileage" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <Input asp-for="Bike.Mileage" class="form-control" style="font-family: 'Open Sans', sans-serif;" />
                <span asp-validation-for="Bike.Mileage" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Price" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <Input asp-for="Bike.Price" class="form-control" style="font-family: 'Open Sans', sans-serif;" />
                <span asp-validation-for="Bike.Price" class="text-danger"></span>
            </div>
            <div class="col-1">
                <label asp-for="Bike.Currency" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-2">
                <select asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectListItem()" class="form-control" style="font-family: 'Open Sans', sans-serif;"></select>
                <span asp-validation-for="Bike.Currency" class="text-danger"></span>
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.Features" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <textarea asp-for="Bike.Features" class="form-control" style="font-family: 'Open Sans', sans-serif;"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.SellerName" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <Input asp-for="Bike.SellerName" class="form-control" style="font-family: 'Open Sans', sans-serif;" />
                <span asp-validation-for="Bike.SellerName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.SellerEmail" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <Input asp-for="Bike.SellerEmail" class="form-control" style="font-family: 'Open Sans', sans-serif;" />
                <span asp-validation-for="Bike.SellerEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Bike.SellerPhone" style="font-family: 'Open Sans', sans-serif;"></label>
            </div>

            <div class="col-4">
                <Input asp-for="Bike.SellerPhone" class="form-control" style="font-family: 'Open Sans', sans-serif;" />
                <span asp-validation-for="Bike.SellerPhone" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" style="font-family: 'Open Sans', sans-serif;" />
            <a asp-action="Index" class="btn btn-success" style="font-family: 'Open Sans', sans-serif;">Back</a>
        </div>
    </form>
    </div>