@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Profile Settings</a>
            </li>
            <li>
                <button type="submit" class="btn btn-danger" >Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register" style="color:#FFF; font-size:17px; font-family: 'Open Sans', sans-serif; font-weight:bold;" >Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="btn btn-success" style="color:#FFF; font-size:17px; font-family: 'Open Sans', sans-serif; font-weight:bold;" >Login</a></li>
    </ul>
}
